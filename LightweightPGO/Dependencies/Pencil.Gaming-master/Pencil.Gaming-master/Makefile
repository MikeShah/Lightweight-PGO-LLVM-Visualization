CSC=gmcs
CFLAGS=-r:System.Drawing -r:System.Core -r:Pencil.Gaming/NVorbis.dll -optimize+ -debug- -target:library -platform:anycpu -unsafe+
FILES=./Pencil.Gaming/AssemblyInfo.cs ./Pencil.Gaming/Audio/AL.cs ./Pencil.Gaming/Audio/AL32.cs ./Pencil.Gaming/Audio/AL64.cs ./Pencil.Gaming/Audio/Alc32.cs ./Pencil.Gaming/Audio/Alc64.cs ./Pencil.Gaming/Audio/AlcManager.cs ./Pencil.Gaming/Audio/ALDelegates.cs ./Pencil.Gaming/Audio/ALEnums.cs ./Pencil.Gaming/Audio/ALUtils.cs ./Pencil.Gaming/Audio/Listener.cs ./Pencil.Gaming/Audio/Sound.cs ./Pencil.Gaming/AutoGeneratedAttribute.cs ./Pencil.Gaming/Glfw/Glfw2.cs ./Pencil.Gaming/Glfw/Glfw2Delegates.cs ./Pencil.Gaming/Glfw/Glfw2DelegateTypes.cs ./Pencil.Gaming/Glfw/Glfw2Enum.cs ./Pencil.Gaming/Glfw/Glfw2KeyboardState.cs ./Pencil.Gaming/Glfw/Glfw2MouseState.cs ./Pencil.Gaming/Glfw/Glfw2Structs.cs ./Pencil.Gaming/Glfw/Glfw2_32.cs ./Pencil.Gaming/Glfw/Glfw2_64.cs ./Pencil.Gaming/Glfw/Glfw3.cs ./Pencil.Gaming/Glfw/Glfw3Delegates.cs ./Pencil.Gaming/Glfw/Glfw3DelegateTypes.cs ./Pencil.Gaming/Glfw/Glfw3Enum.cs ./Pencil.Gaming/Glfw/Glfw3KeyboardState.cs ./Pencil.Gaming/Glfw/Glfw3MouseState.cs ./Pencil.Gaming/Glfw/Glfw3Structs.cs ./Pencil.Gaming/Glfw/Glfw3_32.cs ./Pencil.Gaming/Glfw/Glfw3_64.cs ./Pencil.Gaming/Graphics/AssetLoadException.cs ./Pencil.Gaming/Graphics/Color4.cs ./Pencil.Gaming/Graphics/GL.cs ./Pencil.Gaming/Graphics/GLCore.cs ./Pencil.Gaming/Graphics/GLDelegates.cs ./Pencil.Gaming/Graphics/GlEnums.cs ./Pencil.Gaming/Graphics/GLHelper.cs ./Pencil.Gaming/Graphics/GLLoadException.cs ./Pencil.Gaming/Graphics/GLUtils.cs ./Pencil.Gaming/Math/DualQuaternion.cs ./Pencil.Gaming/Math/MathHelper.cs ./Pencil.Gaming/Math/Matrix.cs ./Pencil.Gaming/Math/Quaternion.cs ./Pencil.Gaming/Math/Rectangle.cs ./Pencil.Gaming/Math/Rectanglei.cs ./Pencil.Gaming/Math/Vector2.cs ./Pencil.Gaming/Math/Vector2i.cs ./Pencil.Gaming/Math/Vector3.cs ./Pencil.Gaming/Math/Vector3i.cs ./Pencil.Gaming/Math/Vector4.cs ./Pencil.Gaming/Math/Vector4i.cs ./Pencil.Gaming/Scripting/Lua.cs ./Pencil.Gaming/Scripting/Lua32.cs ./Pencil.Gaming/Scripting/Lua64.cs ./Pencil.Gaming/Scripting/LuaDelegates.cs ./Pencil.Gaming/Scripting/LuaDelegateTypes.cs ./Pencil.Gaming/Scripting/LuaEnums.cs ./Pencil.Gaming/Scripting/LuaL.cs ./Pencil.Gaming/Scripting/LuaL32.cs ./Pencil.Gaming/Scripting/LuaL64.cs ./Pencil.Gaming/Scripting/LuaLDelegates.cs ./Pencil.Gaming/Scripting/LuaLMacroFunctions.cs ./Pencil.Gaming/Scripting/LuaMacroFunctions.cs ./Pencil.Gaming/Scripting/LuaStructs.cs 
compat_glfw2:
	mkdir -p "Pencil.Gaming/bin/Compatibility-GLFW2"
	cp "Pencil.Gaming/NVorbis.dll" "Pencil.Gaming/bin/Compatibility-GLFW2"
	cp -r "Pencil.Gaming/natives32-glfw2" "Pencil.Gaming/bin/Compatibility-GLFW2"
	cp -r "Pencil.Gaming/natives64-glfw2" "Pencil.Gaming/bin/Compatibility-GLFW2/natives64"
	mv "Pencil.Gaming/bin/Compatibility-GLFW2/natives32-glfw2" "Pencil.Gaming/bin/Compatibility-GLFW2/natives32"
	cp "Pencil.Gaming/Pencil.Gaming.dll.config" "Pencil.Gaming/bin/Compatibility-GLFW2/Pencil.Gaming.dll.config"
	$(CSC) $(FILES) -out:"Pencil.Gaming/bin/Compatibility-GLFW2/Pencil.Gaming.dll" -define:USE_GL_COMPAT\;USE_GLFW2 $(CFLAGS)
compat_glfw3:
	mkdir -p "Pencil.Gaming/bin/Compatibility-GLFW3"
	cp "Pencil.Gaming/NVorbis.dll" "Pencil.Gaming/bin/Compatibility-GLFW3"
