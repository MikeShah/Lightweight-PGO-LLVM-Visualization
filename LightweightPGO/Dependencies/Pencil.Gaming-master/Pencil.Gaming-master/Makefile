	mv "Pencil.Gaming/bin/Compatibility-GLFW3/natives32-glfw3" "Pencil.Gaming/bin/Compatibility-GLFW3/natives32"
	cp "Pencil.Gaming/Pencil.Gaming.dll.config" "Pencil.Gaming/bin/Compatibility-GLFW3/Pencil.Gaming.dll.config"
	$(CSC) $(FILES) -out:"Pencil.Gaming/bin/Compatibility-GLFW3/Pencil.Gaming.dll" -define:USE_GL_COMPAT\;USE_GLFW3 $(CFLAGS)
